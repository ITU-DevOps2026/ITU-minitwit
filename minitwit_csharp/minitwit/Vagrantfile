# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "bento/ubuntu-22.04"
  config.vm.network "forwarded_port", guest: 80, host: 8080
  config.vm.synced_folder ".", "/home/vagrant/vagrant_data", type: "rsync"

  config.vm.provider "virtualbox" do |vb|
    vb.gui = false
    vb.memory = "1024"
  end

  config.vm.provision "shell", inline: <<-SHELL
      # 1. Update and install necessary libraries for .NET
      apt-get update # Update package lists (so we get the latest versions of packages and their dependencies)
      apt-get install -y wget curl libicu-dev # Install wget and curl for downloading the installer, and libicu-dev which is a common dependency for .NET on Linux (we might not need all of these, but it's good to have them just in case)

      # 2. Download and run installer as 'vagrant' user
      sudo -u vagrant wget https://dot.net/v1/dotnet-install.sh -O /home/vagrant/dotnet-install.sh # Download the installer to the vagrant user's home directory
      chmod +x /home/vagrant/dotnet-install.sh # Make the installer executable
      sudo -u vagrant /home/vagrant/dotnet-install.sh --channel 10.0 # Run the installer as the vagrant user to ensure correct permissions

      # 3. Make environment variables permanent for the vagrant user
      if ! grep -q "DOTNET_ROOT" /home/vagrant/.bashrc; then # Check if DOTNET_ROOT is already set in .bashrc to avoid adding it multiple times (-q for quiet mode)
          echo 'export DOTNET_ROOT=$HOME/.dotnet' >> /home/vagrant/.bashrc # Add DOTNET_ROOT to .bashrc 
          echo 'export PATH=$PATH:$DOTNET_ROOT:$DOTNET_ROOT/tools' >> /home/vagrant/.bashrc # Add .NET tools to PATH in .bashrc
      fi
  SHELL
end